<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
 "-//Hibernate/Hibernate Mapping DTD//EN"
 "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping package="com.hand.bean">
	<class name="Address" table="ADDRESS">
   	<id name="id" type="short" column="address_id">
         <generator class="native"/>
    </id>
      <property name="address" column="address" type="string" />
      <property name="address2" column="address2" type="string"/>
      <property name="district" column="district" type="string"/>
      <property name="cityid" column="city_id" type="short" />
      <property name="postalcode" column="postal_code" type="string"/>
      <property name="phone" column="phone" type="string"/>
      <property name="lastupdate" column="last_update" type="timestamp"/>
   </class>
</hibernate-mapping>