<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
 "-//Hibernate/Hibernate Mapping DTD//EN"
 "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping package="com.hand.bean">
   <class name="Customer" table="CUSTOMER">
      <id name="id" type="short" column="customer_id">
         <generator class="native"/>
      </id>
      <property name="storeid" column="store_id" type="byte" />
      <property name="firstname" column="first_name" type="string"/>
      <property name="lastname" column="last_name" type="string"/>
      <property name="email" column="email" type="string" />
      <property name="addressid" column="address_id" type="short"/>
      <property name="active" column="active" type="byte"/>
      <property name="createdate" column="create_date" type="timestamp"/>
      <property name="lastupdate" column="last_update" type="timestamp"/>
   </class>
</hibernate-mapping>